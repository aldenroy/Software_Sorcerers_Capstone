@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card mb-4">
                <div class="card-header">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <p>
                            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                        </p>
                    </div>

                    <form id="delete-user" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        @if (Model.RequirePassword)
                        {
                            <div class="mb-3">
                                <label for="Password" class="form-label">Password</label>
                                <input asp-for="Input.Password" id="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder=" " />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        }
                        <div class="text-center">
                            <button class="btn btn-primary" type="submit">Delete data and close my account</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
